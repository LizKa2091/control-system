{
   "compilerOptions": {
      "target": "ES2020",
      "rootDir": ".",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./types"]
   },
   "include": ["server.ts", "routes/**/*.ts", "middleware/**/*.ts", "types/**/*.d.ts"]
}
