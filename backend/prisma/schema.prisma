generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  engineer
  manager
  lead
  admin
}

enum ProjectStatus {
  planned
  in_progress
  completed
}

enum DefectStatus {
  new
  in_progress
  review
  closed
}

enum DefectPriority {
  low
  medium
  high
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  passwordHash  String
  role          Role      @default(engineer)

  defects       Defect[]  @relation("CreatedDefects")
  assigned      Defect[]  @relation("AssignedDefects")

  projectMemberships ProjectMember[]
  attachments        Attachment[]
  auditLogs          AuditLog[]

  authoredComments   Comment[] @relation("AuthorComments")
  receivedComments   Comment[] @relation("UserComments")
  projectChanges     ProjectChange[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String          @id @default(uuid())
  name        String
  description String?
  status      ProjectStatus   @default(planned)
  defects     Defect[]
  members     ProjectMember[]

  comments        Comment[]
  changes         ProjectChange[]
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model ProjectMember {
  id        String   @id @default(uuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  @@unique([projectId, userId])
}

model ProjectChange {
  id          String   @id @default(cuid())
  projectId   String
  userId      String
  field       String
  oldValue    String?
  newValue    String?
  changedAt   DateTime @default(now())

  project     Project  @relation(fields: [projectId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
}

model Defect {
  id           String         @id @default(uuid())
  title        String
  description  String?
  priority     DefectPriority @default(medium)
  status       DefectStatus   @default(new)

  project      Project?       @relation(fields: [projectId], references: [id])
  projectId    String?

  createdBy    User           @relation("CreatedDefects", fields: [createdById], references: [id])
  createdById  String

  assignee     User?          @relation("AssignedDefects", fields: [assigneeId], references: [id])
  assigneeId   String?

  attachments  Attachment[]
  comments     Comment[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Attachment {
  id           String   @id @default(uuid())
  name         String
  defect       Defect?  @relation(fields: [defectId], references: [id])
  defectId     String
  filename     String
  path         String
  mimeType     String?
  size         Int?
  uploadedBy   User?    @relation(fields: [uploadedById], references: [id])
  uploadedById String?
  createdAt    DateTime @default(now())
}

model Comment {
  id         String   @id @default(uuid())
  text       String

  author     User     @relation("AuthorComments", fields: [authorId], references: [id])
  authorId   String

  user       User     @relation("UserComments", fields: [userId], references: [id])
  userId     String

  defect     Defect?   @relation(fields: [defectId], references: [id])
  defectId   String?

  project    Project? @relation(fields: [projectId], references: [id])
  projectId  String?

  createdAt  DateTime @default(now())
}

model AuditLog {
  id        String  @id @default(uuid())
  user      User?   @relation(fields: [userId], references: [id])
  userId    String?
  action    String
  target    String?
  metadata  Json?
  createdAt DateTime @default(now())
}